{
  "name": "vscode-puglint",
  "displayName": "puglint",
  "description": "Linter and style checker for Pug (formerly Jade)",
  "version": "2.3.0",
  "publisher": "mrmlnc",
  "license": "MIT",
  "engines": {
    "vscode": "^1.0.0"
  },
  "icon": "icon.png",
  "author": {
    "name": "Denis Malinochkin",
    "url": "www.canonium.com"
  },
  "homepage": "https://github.com/mrmlnc/vscode-puglint/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrmlnc/vscode-puglint"
  },
  "keywords": [
    "pug",
    "jade",
    "linter"
  ],
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:pug",
    "onLanguage:jade"
  ],
  "main": "./out/client.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "puglint configuration options",
      "properties": {
        "puglint.enable": {
          "type": "boolean",
          "default": false,
          "description": "Control whether pug-lint is enabled for Pug/Jade files or not."
        },
        "puglint.config": {
          "type": "object",
          "default": {},
          "description": "A pug-lint configuration object."
        },
        "puglint.run": {
          "type": "string",
          "enum": ["onSave", "onType"],
          "default": "onType",
          "description": "Run the linter on save (onSave) or on type (onType)."
        }
      }
    }
  },
  "dependencies": {
    "vscode-languageclient": "2.5.0",
    "vscode-languageserver": "2.5.1",
    "npm-module-path": "2.0.0"
  },
  "devDependencies": {
    "vscode": "^1.0.0",
    "typescript": "^2.0.3",
    "tslint": "^4.3.1"
  },
  "scripts": {
    "test": "tslint src/**/*.ts",
    "build": "tsc"
  }
}
