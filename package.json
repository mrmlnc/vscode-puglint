{
  "name": "vscode-puglint",
  "displayName": "puglint",
  "description": "Linter and style checker for Pug (formerly Jade)",
  "version": "2.2.3",
  "publisher": "mrmlnc",
  "license": "MIT",
  "engines": {
    "vscode": "^1.0.0"
  },
  "icon": "icon.png",
  "author": {
    "name": "Denis Malinochkin",
    "url": "www.canonium.com"
  },
  "homepage": "https://github.com/mrmlnc/vscode-puglint/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrmlnc/vscode-puglint"
  },
  "keywords": [
    "pug",
    "jade",
    "linter"
  ],
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:pug",
    "onLanguage:jade"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "puglint configuration options",
      "properties": {
        "puglint.enable": {
          "type": "boolean",
          "default": false,
          "description": "Control whether pug-lint is enabled for Pug/Jade files or not."
        },
        "puglint.config": {
          "type": "object",
          "default": {},
          "description": "A pug-lint configuration object."
        }
      }
    }
  },
  "scripts": {
    "test": "xo"
  },
  "dependencies": {
    "vscode-languageclient": "2.3.0",
    "vscode-languageserver": "2.2.1"
  },
  "devDependencies": {
    "vscode": "^0.11.13",
    "xo": "^0.16.0"
  },
  "xo": {
    "rules": {
      "indent": [2, 2, { "SwitchCase": 1 }],
      "no-var": 2,
      "prefer-const": [2, { "destructuring": "all" }],
      "arrow-parens": [2, "always"],
      "babel/arrow-parens": 0,
      "object-curly-spacing": [2, "always"],
      "babel/object-curly-spacing": 0,
      "space-before-function-paren": [2, "never"],
      "generator-star-spacing": [2, "after"],
      "babel/generator-star-spacing": 0
    },
    "envs": [
      "node"
    ]
  }
}
